{
  "roots": ["<rootDir>/src"],
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "collectCoverageFrom": ["**/*.{ts,tsx,js,jsx}", "!**/node_modules/**"],
  "coverageReporters": ["json", "lcov", "text", "clover"],
  "resetMocks": false,
  "setupFiles": ["jest-localstorage-mock"]
}
